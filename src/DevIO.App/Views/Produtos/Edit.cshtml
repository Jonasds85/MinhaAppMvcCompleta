@model DevIO.App.ViewModels.ProdutoViewModel

@{
    ViewData["Title"] = "Editar " + Model.Nome;
}

<h3 class="pt-3">@ViewData["Title"]</h3>
<hr />

<form enctype="multipart/form-data" asp-action="Edit">
    <div class="row">
        <div class="col-md-6">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="FornecedorId" class="control-label"></label>
                <label><b>@Model.Fornecedor.Nome</b></label>               
            </div>

            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <textarea rows="5" asp-for="Descricao" class="form-control"></textarea>
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Imagem Atual</label><br/>
                <img src="~/imagens/@Model.Imagem" style="max-width: 70px; max-height: 100px;" alt="@Model.Imagem" />
            </div>

            <div class="form-group">
                <div class="mb-3">
                    <label asp-for="ImagemUpload" class="form-label"></label>
                    <input asp-for="ImagemUpload" class="form-control" type="file" id="ImagemUpload">
                </div>
                @*<span asp-validation-for="ImagemUpload" class="text-danger"></span>*@
            </div>

            <div class="form-group">
                <label asp-for="Valor" class="control-label"></label>
                <input asp-for="Valor" class="form-control" />
                <span asp-validation-for="Valor" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Ativo" /> @Html.DisplayNameFor(model => model.Ativo)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
                <a class="btn btn-info" href="history.back()">Voltar</a>
            </div>
        </div>
    </div>
    
</form>



@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
